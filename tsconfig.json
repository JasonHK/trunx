{
    "compilerOptions": {
        "target": "esnext",
        "module": "es2015",
        "moduleResolution": "node",
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "paths": {
            "*": [
                "*",
                "node_modules/*"
            ]
        },
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "jsx": "react",
        "jsxFactory": "h",
        "preserveConstEnums": false,
        "removeComments": true,
        "sourceMap": true,
    },
    "exclude": [
        "**/stories"
    ],
    "include": [
        "./src/**/*"
    ]
}